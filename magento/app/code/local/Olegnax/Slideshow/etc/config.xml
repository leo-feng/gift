<?xml version="1.0"?>
<config>
    <modules>
        <Olegnax_Slideshow>
            <version>0.1.2</version>
        </Olegnax_Slideshow>
    </modules>
    <frontend>
        <layout>
            <updates>
                <slideshow>
                    <file>olegnax_slideshow.xml</file>
                </slideshow>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<slideshow>
				<use>admin</use>
				<args>
					<module>Olegnax_Slideshow</module>
					<frontName>slideshow</frontName>
				</args>
			</slideshow>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<olegnax translate="title" module="slideshow">
				<title>Olegnax</title>
				<sort_order>9999</sort_order>
				<children>
					<slideshow translate="title" module="slideshow">
						<title>Slideshow</title>
						<sort_order>20</sort_order>
						<children>
							<items translate="title" module="slideshow">
								<title>Manage Items</title>
								<sort_order>0</sort_order>
								<action>slideshow/adminhtml_slideshow</action>
							</items>
							<configuration>
								<title>Configuration</title>
								<sort_order>1</sort_order>
								<action>adminhtml/system_config/edit/section/slideshow</action>
							</configuration>
						</children>
					</slideshow>
				</children>
			</olegnax>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Olegnax_Slideshow>
							<title>Slideshow Module</title>
							<sort_order>10</sort_order>
						</Olegnax_Slideshow>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>   
    <global>
        <models>
            <slideshow>
                <class>Olegnax_Slideshow_Model</class>
                <resourceModel>slideshow_mysql4</resourceModel>
            </slideshow>
            <slideshow_mysql4>
                <class>Olegnax_Slideshow_Model_Mysql4</class>
                <entities>
                    <slideshow>
                        <table>olegnax_slideshow</table>
                    </slideshow>
                    <slideshow_store>
                        <table>olegnax_slideshow_store</table>
                    </slideshow_store>
                </entities>
            </slideshow_mysql4>
        </models>
        <resources>
            <slideshow_setup>
                <setup>
                    <module>Olegnax_Slideshow</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </slideshow_setup>
            <slideshow_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </slideshow_write>
            <slideshow_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </slideshow_read>
        </resources>
        <blocks>
            <slideshow>
                <class>Olegnax_Slideshow_Block</class>
            </slideshow>
        </blocks>
        <helpers>
            <slideshow>
                <class>Olegnax_Slideshow_Helper</class>
            </slideshow>
        </helpers>
    </global>
	<default>
		<slideshow>
			<slideshow_config>
				<enabled>1</enabled>
				<interval>6000</interval>
				<speed>1000</speed>
				<fade_speed>400</fade_speed>
				<effect>fade</effect>
				<details>DETAILS</details>
			</slideshow_config>
		</slideshow>
	</default>
</config>